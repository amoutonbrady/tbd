{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ESNext", "ESNext.AsyncIterable", "DOM"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./packages/client2/*"],
      "@/*": ["./packages/client2/*"]
    },
    "types": [
      "@nuxt/types",
      "@types/node",
      "cookie-universal-nuxt",
      "pinia/nuxt/types"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
